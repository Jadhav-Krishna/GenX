{
  "name": "genx-ai-agent",
  "version": "1.0.0",
  "private": true,
  "main": "./dist-electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:main && vite build && electron-builder",
    "build:vite": "vite build",
    "build:electron": "tsc -p electron && electron-builder",
    "build:main": "tsc -p electron",
    "preview": "vite preview",
    "electron": "wait-on tcp:5173 && electron .",
    "electron:dev": "concurrently \"npm run dev\" \"npm run build:main -- --watch\" \"npm run electron\"",
    "electron:pack": "npm run build && electron-builder --dir",
    "electron:dist": "npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist dist-electron release"
  },
  "dependencies": {
    "electron-store": "^10.1.0",
    "framer-motion": "^12.23.9",
    "lucide-react": "^0.525.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.8.0",
    "styled-components": "^6.1.19",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@types/styled-components": "^5.1.34",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^37.2.4",
    "electron-builder": "^24.13.3",
    "rimraf": "^5.0.5",
    "typescript": "^5.4.2",
    "vite": "^5.2.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.genx.ai-agent",
    "productName": "GenX",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "assets/GenX_icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "author": "Krishna",
  "license": "MIT",
  "description": "GenX AI Agent - Your Personal Desktop Assistant with Real AI Integration"
}
